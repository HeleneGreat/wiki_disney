{% extends 'base.html.twig' %}

{% block title %}{{category.name}}{% endblock %}

{% block body %}
<section id="category" class="container">
    <h1>{{category.name}} <img src="{{asset('uploads/categories/')}}{{category.image}}" alt="{{category.name}}"></h1>
    <div class="row g-4 mt-0">
        {% if category_articles is defined %}
            {% for article in category_articles %}
            <div class="col-6 col-md-3">
                <a href="{{path('one_article', {articleId:article.id})}}">
                    <div class="card">
                        <img src="{{asset('uploads/articles/')}}{{article.image}}" class="card-img-top" alt="{{article.title}}">
                        <div class="card-body">
                            <h2 class="card-title">{{article.title}}</h2>
                            <p>par {{article.author.pseudo}}</p>
                        </div>
                    </div>
                </a>
            </div>
            {% endfor %}
        {% endif %}
    </div> 
</section>

{% endblock %}