{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<section class="container">
    <h1>Articles</h1>
    <div class="row g-4">
        {% if all_articles is defined %}
            {% for article in all_articles %}
            <div class="col-6 col-md-3">
                <div class="card">
                    <img src="https://cdn.pixabay.com/photo/2022/10/15/14/55/ornamental-plant-7523304_960_720.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h2 class="card-title">{{article.title}}</h2>
                    </div>
                </div>
            </div>
            {% endfor %}
        {% endif %}
    </div> 
</section>

{% endblock %}

{{include('layouts/footer.html.twig')}}
